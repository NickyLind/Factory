@{
  Layout = "_Layout";
}

@model Factotry.Models.Engineer

<h2>Item Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This engineer isn't licensed to fix any machines</p>
}
else
{
  <h4>Machines this engineer is licensed to fix: </h4>
  <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@join.Machine.Name</li>
    }
  </ul>
}

<p>back to @Html.ActionLink("Engineer List", "Index")</p>
<p>Edit @Html.ActionLink("Engineer", "Edit", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Delete Engineer", "Delete", new { id = Model.EngineerId })</p> 