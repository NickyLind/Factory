@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="header">Add a machine license</div>

<div class="subHeader">Add a machine license to this engineer: @Html.DisplayFor(model => model.Name)</div>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.Label("Select machine")
  @Html.DropDownList("MachineId", "N/A")

  <input type="submit" value="Save" />
}

<p>Back to @Html.ActionLink("Engineer List", "Index")</p>