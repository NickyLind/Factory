@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Add a machine license</h2>

<h4>Add a machine license to this engineer: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.Label("Select machine")
  @Html.DropDownList("MachineId", "N/A")

  <input type="submit" value="Save" />
}

<p>Back to @Html.ActionLink("Engineer List", "Index")</p>