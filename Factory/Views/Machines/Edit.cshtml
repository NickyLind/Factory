@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="header">Edit</div>

<div class="subHeader">Edit this Machine: @Html.DisplayFor(model => model.Name)</div>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  @foreach (var join in Model.JoinEntities)
  {
      @Html.Hidden("joinId", @join.EngineerMachineId)
  }

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.Label("Select a licensed engineer")
  @Html.DropDownList("EngineerId", "N/A")
  <input type="submit" value="Save" />
}
<p>Back to @Html.ActionLink("Machine List", "Index")</p>