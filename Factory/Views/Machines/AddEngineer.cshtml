@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="header">Add an engineer</div>

<div class="subHeader">Add a licensed engineer for this machine: @Html.DisplayFor(model => model.Name)</div>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select engineer")
  @Html.DropDownList("EngineerId", "N/A")

  <input type="submit" value="Save" />
}

<p>Back to @Html.ActionLink("Machine List", "Index")</p>