@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<div class="header">Machines</div>

@if(@Model.Count == 0)
{
  <div class="subHeader">No machines have been added yet. sad face.</div>
}

<ul>
  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
  }
</ul>
<p>Add a @Html.ActionLink("new machine", "Create")</p>
<p>Return to the @Html.ActionLink("Home Page", "Index", "Home")</p>